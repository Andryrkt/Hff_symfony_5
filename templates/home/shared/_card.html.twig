 {# Titre #}
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">Tableau de bord</h1>
            <p class="text-muted">Accédez rapidement aux différentes sections de l'application</p>
        </div>
    </div>

    {# Grille des vignettes #}
    <div class="row g-4">
        {% for card in cards %}
            <div class="col-xl-3 col-lg-4 col-md-6">
                <div class="card home-card h-100 shadow-sm" 
                     data-bs-toggle="modal" 
                     data-bs-target="#homeModal"
                     data-card-id="{{ loop.index0 }}"
                     style="cursor: pointer; transition: transform 0.2s;">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="{{ card.icon }} fa-3x text-{{ card.color }}"></i>
                        </div>
                        <h5 class="card-title">{{ card.title }}</h5>
                        <p class="card-text text-muted small">{{ card.description }}</p>
                        <div class="mt-3">
                            <span class="badge bg-{{ card.color }}">{{ card.links|length }} liens</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{# Modal global #}
<div class="modal fade" id="homeModal" tabindex="-1" aria-labelledby="homeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="homeModalLabel">Navigation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalContent">
                {# Le contenu sera chargé dynamiquement via AJAX #}
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-2">Chargement des liens...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const modal = new bootstrap.Modal(document.getElementById('homeModal'));
    const modalContent = document.getElementById('modalContent');
    const modalTitle = document.getElementById('homeModalLabel');

    // Gestion du clic sur les cards
    document.querySelectorAll('.home-card').forEach(card => {
        card.addEventListener('click', function() {
            const cardId = this.getAttribute('data-card-id');
            loadCardContent(cardId);
        });
    });

    function loadCardContent(cardId) {
        // Afficher le loader
        modalContent.innerHTML = `
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
                <p class="mt-2">Chargement des liens...</p>
            </div>
        `;

        // Charger le contenu via AJAX
        fetch(`/api/home/card/${cardId}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Card not found');
                }
                return response.json();
            })
            .then(data => {
                displayCardContent(data);
            })
            .catch(error => {
                modalContent.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        Erreur lors du chargement: ${error.message}
                    </div>
                `;
            });
    }

    function displayCardContent(data) {
        modalTitle.textContent = data.title;
        
        if (data.links && data.links.length > 0) {
            let linksHtml = '<div class="list-group list-group-flush">';
            
            data.links.forEach(link => {
                const url = '{{ path("app_home") }}'.replace('app.home', link.route);
                linksHtml += `
                    <a href="${url}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        ${link.label}
                        <i class="fas fa-chevron-right text-muted"></i>
                    </a>
                `;
            });
            
            linksHtml += '</div>';
            modalContent.innerHTML = linksHtml;
        } else {
            modalContent.innerHTML = `
                <div class="text-center text-muted">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <p>Aucun lien disponible pour cette section.</p>
                </div>
            `;
        }
    }

    // Réinitialiser le modal quand il se ferme
    document.getElementById('homeModal').addEventListener('hidden.bs.modal', function() {
        modalTitle.textContent = 'Navigation';
    });
});
</script>