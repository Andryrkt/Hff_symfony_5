{% extends 'base.html.twig' %}

{% block title %}Détails du rôle
	{{ role.label }}
{% endblock %}

{% block content %}
	<div class="container">
		<h1 class="mb-4">
			<i class="fas fa-user-shield"></i>
			Détails du rôle
		</h1>

		<div class="card shadow-sm">
			<div class="card-header bg-primary text-white">
				<h3 class="mb-0">
					<code class="text-white">{{ role.code }}</code>
					-
					{{ role.label }}
				</h3>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-6">
						<h5>
							<i class="fas fa-info-circle text-primary"></i>
							Informations générales
						</h5>
						<table class="table table-bordered">
							<tbody>
								<tr>
									<th style="width: 40%;">Code</th>
									<td>
										<code class="text-primary">{{ role.code }}</code>
									</td>
								</tr>
								<tr>
									<th>Label</th>
									<td>
										<strong>{{ role.label }}</strong>
									</td>
								</tr>
								<tr>
									<th>Description</th>
									<td>{{ role.description }}</td>
								</tr>
								<tr>
									<th>Niveau d'accès</th>
									<td>
										<span class="badge bg-{{ role.level >= 10 ? 'danger' : 'secondary' }} fs-6">
											Niveau
											{{ role.level }}
										</span>
									</td>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="col-md-6">
						<h5>
							<i class="fas fa-key text-success"></i>
							Permissions associées
						</h5>
						<div class="card">
							<div class="card-body">
								<ul class="list-group list-group-flush">
									{% for permission in role.permissions %}
										<li class="list-group-item">
											<i class="fas fa-check-circle text-success"></i>
											{{ permission }}
										</li>
									{% endfor %}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="mt-3">
			<a href="{{ path('app_admin_application_groupe_role_index') }}" class="btn btn-secondary">
				<i class="fas fa-arrow-left"></i>
				Retour à la liste
			</a>
		</div>
	</div>
{% endblock %}
