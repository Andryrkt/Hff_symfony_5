{% extends 'base.html.twig' %}

{% block title %}Détails de la permission
{% endblock %}

{% block content %}
	<div class="container">
		<h1>Détails de la permission</h1>

		<table class="table table-bordered">
			<tbody>
				<tr>
					<th>ID</th>
					<td>{{ permission.id }}</td>
				</tr>
				<tr>
					<th>Code</th>
					<td>{{ permission.code }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ permission.description }}</td>
				</tr>
				<tr>
					<th>Date de création</th>
					<td>{{ permission.createdAt ? permission.createdAt|date('d/m/Y H:i') : '' }}</td>
				</tr>
				<tr>
					<th>Date de modification</th>
					<td>{{ permission.updatedAt ? permission.updatedAt|date('d/m/Y H:i') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<div class="d-flex gap-2 mt-3">
			<a href="{{ path('app_admin_application_groupe_permission_index') }}" class="btn btn-secondary">Retour à la liste</a>
			<a href="{{ path('app_admin_application_groupe_permission_edit', {'id': permission.id}) }}" class="btn btn-warning">Modifier</a>
			{{ include('admin/application_groupe/permission/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
