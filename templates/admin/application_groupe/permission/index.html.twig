{% extends 'base.html.twig' %}

{% block title %}Liste des permissions
{% endblock %}

{% block content %}
	<div class="container">
		<h1>Liste des permissions</h1>

		<div class="d-flex justify-content-between align-items-center mb-3">
			<a href="{{ path('app_admin_application_groupe_permission_new') }}" class="btn btn-primary">Créer une nouvelle permission</a>
		</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Code</th>
					<th>Description</th>
					<th>Date de création</th>
					<th>Date de modification</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for permission in permissions %}
					<tr>
						<td>{{ permission.id }}</td>
						<td>{{ permission.code }}</td>
						<td>{{ permission.description }}</td>
						<td>{{ permission.createdAt ? permission.createdAt|date('d/m/Y H:i') : '' }}</td>
						<td>{{ permission.updatedAt ? permission.updatedAt|date('d/m/Y H:i') : '' }}</td>
						<td>
							<a href="{{ path('app_admin_application_groupe_permission_show', {'id': permission.id}) }}" class="btn btn-sm btn-info">Voir</a>
							<a href="{{ path('app_admin_application_groupe_permission_edit', {'id': permission.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6" class="text-center">Aucune permission trouvée.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
