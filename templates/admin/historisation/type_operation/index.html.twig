{% extends 'base.html.twig' %}

{% block title %}Gestion des Types d'Opération{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1 class="mb-4">Liste des Types d'Opération</h1>

    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Type d'Opération</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_operation in type_operations %}
            <tr>
                <td>{{ type_operation.id }}</td>
                <td>{{ type_operation.typeOperation }}</td>
                <td class="text-right">
                    <a href="{{ path('app_admin_type_operation_show', {'id': type_operation.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_admin_type_operation_edit', {'id': type_operation.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_type_operation_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Créer un nouveau type
    </a>
</div>
{% endblock %}
