{% extends 'base.html.twig' %}

{% block title %}Détails du Type d'Opération
{% endblock %}

{% block content %}
	<div class="container mt-4">
		<div class="card">
			<div class="card-header">
				<h1>Détails du Type d'Opération</h1>
			</div>
			<div class="card-body">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th style="width: 200px;">Id</th>
							<td>{{ type_operation.id }}</td>
						</tr>
						<tr>
							<th>Type d'Opération</th>
							<td>{{ type_operation.typeOperation }}</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="card-footer">
				<a href="{{ path('app_admin_type_operation_index') }}" class="btn btn-secondary">Retour à la liste</a>
				<a href="{{ path('app_admin_type_operation_edit', {'id': type_operation.id}) }}" class="btn btn-warning">Modifier</a>
				<div class="float-right">
					{{ include('admin/type_operation/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
