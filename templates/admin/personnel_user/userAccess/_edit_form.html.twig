<turbo-frame id="form-{{ user.id }}">
	<div class="card">
		<div class="card-header">
			<h5 class="card-title mb-0">Modifier l'utilisateur :
				{{ user.fullname }}</h5>
		</div>
		<div class="card-body">
			{{ form_start(form) }}
			<div class="row">
				<div class="col-md-6">
					{{ form_row(form.email) }}
				</div>
				<div class="col-md-6">
					{{ form_row(form.fullname) }}
				</div>
				<div class="col-md-6">
					{{ form_row(form.roles) }}
				</div>
				{# Ajoutez les autres champs de votre formulaire #}
			</div>

			<div class="mt-3">
				<button type="submit" class="btn btn-success">
					<i class="fas fa-save"></i>
					Sauvegarder
				</button>
				<button type="button" class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#collapse-{{ user.id }}">
					<i class="fas fa-times"></i>
					Annuler
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</turbo-frame>
