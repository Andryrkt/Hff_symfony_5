{{ form_start(form) }}
<div class="{{ form.vars.data.id is null ? '' : 'd-none'}}">
	{{ form_row(form.users) }}
</div>
<div class="row">
	<div class="col-12 col-md-4">
		{{ form_row(form.agence) }}
		{{ form_row(form.allAgence) }}
	</div>
	<div class="col-12 col-md-4">
		{{ form_row(form.service) }}
		{{ form_row(form.allService) }}
	</div>
	<div class="col-12 col-md-4">
		<div class="mb-3">
			{{ form_label(form.permissions) }}
			{{ form_widget(form.permissions) }}
			{{ form_errors(form.permissions) }}
		</div>
		<div class="mb-3">
			{{ form_row(form.typeDocument) }}
		</div>
	</div>
</div>


<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
