{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('login-style') }}
{% endblock %}
{% block navbar %}{% endblock %}
{% block body %}
	<div id="intro" class="bg-image shadow-2-strong">
		<div class="mask d-flex align-items-center h-100">
			<div class="container">
				<div class="row justify-content-center ">
					<div class="col-xl-5 col-md-8">
						<form class="bg-white rounded p-5 shadow" style="opacity: 85%" method="POST" action="">
							<img src="{{ webpack_asset('build/images/logoHFF.jpg') }}" alt="Logo HFF" class="img-fluid mb-4"/>

							{% if error %}
								<div class="alert alert-danger">
									{{ error.messageKey|trans(error.messageData, 'security') }}
								</div>
							{% endif %}

							<div class=" mb-4" data-mdb-input-init>
								<label for="username" class="form-label">Utilisateur</label>
								<div class="input-group">
									<input id="username" type="text" class="form-control" name="_username" aria-label="Nom d'utilisateur" required/>
								</div>
							</div>

							<div class=" mb-4" data-mdb-input-init>
								<label class="form-label" for="password">Mot de passe</label>
								<div class="input-group">
									<input type="password" id="password" class="form-control" name="_password" aria-label="Mot de passe" required/>
									<button type="button" id="togglePassword" class="input-group-text" aria-label="Afficher le mot de passe" aria-pressed="false">
										<i class="fa fa-eye" id="toggleIcon"></i>
									</button>
								</div>
							</div>
							<button type="submit" class="btn" style="background-color: black; color: white">
								Se connecter
							</button>
						</form>
						<div class="notice">
							<span class="notice-icon">
								<i class="fas fa-info-circle"></i>
							</span>
							<div class="notice-content">L'identifiant et le mot de passe sont le nom d'utilisateur et le mot de passe que vous utilisez pour vous connecter Ã  votre ordinateur.
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('login') }}
{% endblock %}
