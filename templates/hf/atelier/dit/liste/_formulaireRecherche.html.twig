{% import "macros/form_macros.html.twig" as formMacros %}
{% import "macros/actions.html.twig" as actions %}

<div class="accordion" id="formAccordion">
	<div class="accordion-item">
		<h2 class="accordion-header">
			<button class="accordion-button enteteAccordion" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
				Formulaire de recherche
			</button>
		</h2>
		<div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#formAccordion">
			<div class="accordion-body">
				{{ form_start(form, {'method': 'GET'}) }}
				<div class="row">
					<div class="col-12 col-md-2">
						{{ form_row(form.statut) }}
						{{ form_row(form.typeDocument) }}
						{{ form_row(form.numDit) }}
						{{ form_row(form.reparationRealise)}}
						{{ form_row(form.numDevis) }}
					</div>
					<div class="col-12 col-md-2">
						{{ formMacros.niveauUrgenceField(form.niveauUrgence) }}
						{{ form_row(form.internetExterne)}}
						{{ form_row(form.numOr)}}
						{{ form_row(form.sectionAffectee) }}
						{{form_row(form.ditSansOr)}}
					</div>
					<div class="col-12 col-md-2">
						{{ form_row(form.dateDemande.debut)}}
						{{ form_row(form.dateDemande.fin)}}
						{{ form_row(form.statutOr) }}
						{{ form_row(form.sectionSupport1)}}
					</div>
					<div class="col-12 col-md-2">
						{{ formMacros.debiteurOuEmetteurFields(form, 'emetteur') }}
						{{form_row(form.categorie)}}
						{{form_row(form.sectionSupport2)}}
					</div>
					<div class="col-12 col-md-2">
						{{ formMacros.debiteurOuEmetteurFields(form, 'debiteur') }}
						{{form_row(form.utilisateur)}}
						{{form_row(form.sectionSupport3)}}
					</div>
					<div class="col-12 col-md-2">
						{{form_row(form.idMateriel)}}
						{{form_row(form.numParc)}}
						{{form_row(form.numSerie)}}
						{{ form_row(form.etatFacture)}}
					</div>
				</div>

				{{ actions.filter_buttons(path('hf_atelier_dit_liste_index')) }}

				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{{ agence_service_data() }}
