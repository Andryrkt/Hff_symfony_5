{% extends "base.html.twig" %}

{% block title %}
	Cr√©ation Casier - Etape 1
{% endblock %}

{% block content %}
	<div class="container mt-6 mb-4">
		<div class="card">
			<div class="card-body">
				<div class="d-flex  flex-row-reverse px-2">
					<h4 class="perso-titre">Nouveau Casier</h4>
				</div>
				{{ form_start(form)}}
				<div class="row">
					<div class="col-12 col-md-4">
						{{ form_row(form.agenceUser)}}
					</div>
					<div class="col-12 col-md-4">
						{{ form_row(form.serviceUser)}}
					</div>
				</div>
				<div class="row" data-controller="casier-first-form">
					<div class="col-12 col-md-4" data-controller="number-only character-limiter" data-character-limiter-max-length-value="5">{{ form_row(form.idMateriel, { 'attr': { 'data-number-only-target': 'input', 'data-character-limiter-target': 'input', 'data-casier-first-form-target': 'idMateriel', 'data-action': 'input->number-only#filter input->character-limiter#limiterCaracteres input->casier-first-form#validateFields'}})}}</div>
					<div class="col-12 col-md-4">{{ form_row(form.numParc, { 'attr': { 'data-casier-first-form-target': 'numParc', 'data-action': 'input->casier-first-form#validateFields'}})}}</div>
					<div class="col-12 col-md-4">{{ form_row(form.numSerie, { 'attr': { 'data-casier-first-form-target': 'numSerie', 'data-action': 'input->casier-first-form#validateFields'}})}}</div>
				</div>
				<div class="row">
					<div class="d-flex justify-content-end mt-2">
						{% import "macros/actions.html.twig" as actions %}
						{{ actions.submit_button('Suivant', 'fas fa-arrow-right', 'btn-info') }}
					</div>
				</div>
				{{ form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
