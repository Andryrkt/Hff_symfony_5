<div class="flex-shrink-0 p-3" style="width: 280px;">
    <a href="{{ path('app_home') }}"
        class="d-flex align-items-center pb-3 mb-3 link-body-emphasis text-decoration-none border-bottom">
        <img src="{{ asset('build/images/logoHFF.jpg') }}" alt="logo Henri Friase" style="height: 40px;">
        <span class="fs-5 fw-semibold"></span>
    </a>
    <ul class="list-unstyled ps-0">
        {% if app.user and infoUserCours is defined %}
        {% for item in infoUserCours %}
        {% if item.App == 'BDM' %}
        <li class="mb-1">
            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed fw-bold"
                data-bs-toggle="collapse" data-bs-target="#bdm-collapse" aria-expanded="true">
                <i class="fas fa-truck-moving me-2"></i>
                Mouvement Matériels (BADM)
            </button>
            <div class="collapse show" id="bdm-collapse">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small mx-4">
                    <li>
                        <a href="#" onclick="alert('BADM - Nouvelle Demande - En cours de développement')"
                            class="link-body-emphasis d-inline-flex text-decoration-none rounded">
                            <i class="fas fa-plus-circle me-2"></i>Nouvelle Demande
                        </a>
                    </li>
                    <li>
                        <a href="#" onclick="alert('BADM - Consultation - En cours de développement')"
                            class="link-body-emphasis d-inline-flex text-decoration-none rounded">
                            <i class="fas fa-search me-2"></i>Consultation
                        </a>
                    </li>
                </ul>
            </div>
        </li>
        <li class="mb-1">
            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed fw-bold"
                data-bs-toggle="collapse" data-bs-target="#casier-collapse" aria-expanded="true">
                <i class="fas fa-archive me-2"></i>
                Casier
            </button>
            <div class="collapse show" id="casier-collapse">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small mx-4">
                    <li>
                        <a href="#" onclick="alert('Casier - Nouveau - En cours de développement')"
                            class="link-body-emphasis d-inline-flex text-decoration-none rounded">
                            <i class="fas fa-plus-circle me-2"></i>Nouveau Casier
                        </a>
                    </li>
                    <li>
                        <a href="#" onclick="alert('Casier - Consultation - En cours de développement')"
                            class="link-body-emphasis d-inline-flex text-decoration-none rounded">
                            <i class="fas fa-search me-2"></i>Consultation Casier
                        </a>
                    </li>
                </ul>
            </div>
        </li>
        {% elseif item.App == 'DOM' %}
        <li class="mb-1">
            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed fw-bold"
                data-bs-toggle="collapse" data-bs-target="#dom-collapse" aria-expanded="true">
                <i class="fas fa-file-alt me-2"></i>
                Ordre de Mission
            </button>
            <div class="collapse show" id="dom-collapse">
                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small mx-4">
                    <li>
                        <a href="#" onclick="alert('DOM - Nouvelle Demande - En cours de développement')"
                            class="link-body-emphasis d-inline-flex text-decoration-none rounded">
                            <i class="fas fa-plus-circle me-2"></i>Nouvelle Demande
                        </a>
                    </li>
                    <li>
                        <a href="#" onclick="alert('DOM - Consultation - En cours de développement')"
                            class="link-body-emphasis d-inline-flex text-decoration-none rounded">
                            <i class="fas fa-search me-2"></i>Consultation
                        </a>
                    </li>
                </ul>
            </div>
        </li>
        {% elseif item.App == 'DIT' %}
        <li class="mb-1">
            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed fw-bold"
                data-bs-toggle="collapse" data-bs-target="#dit-collapse" aria-expanded="true">
                <i class="fas fa-tools me-2"></i>
                Demande d'Intervention
            </button>
            <div class="collapse show" id="dit-collapse">
