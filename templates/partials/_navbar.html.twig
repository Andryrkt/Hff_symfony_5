<nav
	class="navbar navbar-expand-lg navbar-dark bg-dark px-0">
	<!-- Suppression du padding horizontal -->
	<div
		class="container-fluid">
		<!-- Changement de .container en .container-fluid -->
		<a class="navbar-brand" href="{{ path('app_home') }}">
			<img src="{{ webpack_asset('build/images/logoHFF.jpg') }}" alt="Logo HFF" class="img-fluid" width="150px"/>
		</a>

		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarContent">
			<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
				{% for item in mainMenu %}
					{% if item.visible %}
						{% if item.children is defined %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle
																		                                    {% for child in item.children %}
																		                                        {% if child.visible and app.request.attributes.get('_route') == child.route %}
																		                                            active
																		                                        {% endif %}
																		                                    {% endfor %}" href="#" data-bs-toggle="dropdown">
									<i class="{{ item.icon }} me-1"></i>
									{{ item.label }}
								</a>
								<ul
									class="dropdown-menu dropdown-menu-end">
									<!-- Alignement Ã  droite -->
									{% for child in item.children %}
										{% if child.visible %}
											<li>
												<a class="dropdown-item {% if app.request.attributes.get('_route') == child.route %}active{% endif %}" href="{{ path(child.route) }}">
													<i class="{{ child.icon }} me-1"></i>
													{{ child.label }}
												</a>
											</li>
										{% endif %}
									{% endfor %}
								</ul>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link {% if app.request.attributes.get('_route') == item.route %}active{% endif %}" href="{{ path(item.route) }}">
									<i class="{{ item.icon }} me-1"></i>
									{{ item.label }}
								</a>
							</li>
						{% endif %}
					{% endif %}
				{% endfor %}
			</ul>
		</div>
	</div>
</nav>
