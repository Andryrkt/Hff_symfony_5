{% import "macros/actions.html.twig" as actions %}

<div
	class="d-flex justify-content-between">
	{# Boutons d'actions #}
	{{ actions.action_buttons(buttons) }}

	{# Informations de résultats #}
	<div>
		<p class="fw-bold my-3" id="nombreResultat">
			{{ resultCount }}
			Résultats
		</p>
	</div>

	{# Pagination - informations #}
	<div>
		<p class="fw-bold my-3" id="nombreResultat">
			{{ currentPage ~ ' / ' ~ totalPages }}
			pages
		</p>
	</div>

	{# Sélecteur de limite de pagination #}
	<div class="p-3">
		<label for="limit-selector" class="form-label">Résultats par page :</label>
		<select id="limit-selector" class="form-select form-select-sm" style="width: auto; display: inline-block;">
			<option value="10" {{ (queryParams.limit ?? 50) == 10 ? 'selected' : '' }}>10</option>
			<option value="25" {{ (queryParams.limit ?? 50) == 25 ? 'selected' : '' }}>25</option>
			<option value="50" {{ (queryParams.limit ?? 50) == 50 ? 'selected' : '' }}>50</option>
			<option value="100" {{ (queryParams.limit ?? 50) == 100 ? 'selected' : '' }}>100</option>
		</select>
	</div>

	{# Navigation de pagination #}
	<div class="navigation">
		{% set queryParams = criteria|default({}) %}

		{# Première page #}
		{% if currentPage > 1 %}
			<a class="btn btn-dark my-3" href="{{ path(routeName, queryParams|merge({'page': 1})) }}" data-bs-toggle="tooltip" title="Première page">
				<i class="fas fa-angle-double-left text-warning"></i>
			</a>
		{% endif %}

		{# Page précédente #}
		{% if currentPage > 1 %}
			<a class="btn btn-dark my-3" href="{{ path(routeName, queryParams|merge({'page': currentPage - 1})) }}" data-bs-toggle="tooltip" title="Page précédente">
				<i class="fas fa-angle-left text-warning"></i>
			</a>
		{% endif %}

		{# Page suivante #}
		{% if currentPage < totalPages %}
			<a class="btn btn-dark my-3" href="{{ path(routeName, queryParams|merge({'page': currentPage + 1})) }}" data-bs-toggle="tooltip" title="Page suivante">
				<i class="fas fa-angle-right text-warning"></i>
			</a>
		{% endif %}

		{# Dernière page #}
		{% if currentPage < totalPages %}
			<a class="btn btn-dark my-3" href="{{ path(routeName, queryParams|merge({'page': totalPages})) }}" data-bs-toggle="tooltip" title="Dernière page">
				<i class="fas fa-angle-double-right text-warning"></i>
			</a>
		{% endif %}
	</div>
</div>




