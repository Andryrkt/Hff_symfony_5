<nav aria-label="breadcrumb" class="mb-3 position-relative">
	<ol class="breadcrumb bg-light p-2 rounded shadow-sm mb-0">
		{% for item in breadcrumb %}
			<li class="breadcrumb-item {% if loop.last %}active{% endif %} position-relative dropdown">
				{% if not loop.last %}
					{% if item.url %}
						<a class="text-decoration-none text-primary dropdown-toggle" href="{{ item.url }}" role="button">
							{{ item.label }}
						</a>
					{% else %}
						<span class="text-secondary">{{ item.label }}</span>
					{% endif %}

					{# sous-menu affichÃ© au survol #}
					{% if item.submenu is defined and item.submenu|length > 0 %}
						<ul class="dropdown-menu shadow-sm">
							{% for sub in item.submenu %}
								<li>
									<a class="dropdown-item" href="{{ path(sub.route, sub.params|default({})) }}">
										{{ sub.label }}
									</a>
								</li>
							{% endfor %}
						</ul>
					{% endif %}
				{% else %}
					<span class="text-dark fw-semibold">{{ item.label }}</span>
				{% endif %}
			</li>
		{% endfor %}
	</ol>
</nav>

{# === Activation du menu au survol === #}
<style>
	.breadcrumb-item.dropdown .dropdown-menu {
		opacity: 0;
		visibility: hidden;
		transition: opacity 0.2s ease, visibility 0.2s ease;
	}
	.breadcrumb-item.dropdown:hover .dropdown-menu {
		opacity: 1;
		visibility: visible;
		display: block;
	}
</style>
